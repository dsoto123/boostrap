// HEADER
//***************************************

.header
	background #18bc9c
	padding 90px 0
	&-contenedor
		max-width 80%
		margin-left auto
		margin-right auto
		text-align center
		color white
		&-figure
			margin 0
		&-titulo
			font-family 'Montserrat'
			font-size 4.75rem
		&-separador
			max-width 40%
			border 2px solid white
		&-separador:after
			content "\2605"
			font-size 3rem
			position relative
			top -28px
			background #18bc9c
			padding 0 10px
			// font-family ''
		&-descripcion
			font-family 'Lato'
			font-size 1.75rem
//********************************************

//PORTAFOLIO
//********************************************
.portafolio
	padding 70px 0
	font-family 'Montserrat'
	&-contenedor
		max-width 80%
		margin-right auto
		margin-left auto
		&-fila1
			text-align center
			color #2c3e50
			margin-bottom 50px
			&-titulo
				font-size 3rem
				text-transform uppercase
			&-separador
				width 40%
				border 2px solid
			&-separador:after
				content "\2605"
				font-size 3rem
				position relative
				top -28px
				background white
				padding 0 10px
		&-fila2
			display flex
			justify-content space-around
			flex-wrap wrap
			&-cajaImagenes
				min-width 250px
				width 30%
				position relative
				margin 20px 0
				overflow hidden
				&-figure
					margin 0
					img
						display block
						width 100%
				&-icono
					position absolute
					display flex
					justify-content center
					align-items center
					top 0
					bottom 0
					right 0
					left 0
					color transparent
					font-size 3rem
					transition .6s
					background transparent
				// &-icono:hover
				// 	color white
				// 	background rgba(24,188,156,.8)
				// 	transition .6s
			&-cajaImagenes:hover &-cajaImagenes-icono
				background rgba(24,188,156,.8)
				color white
				transition .6s
//************************************************


// ABOUT
//*************************************************

.about
	background #18bc9c
	padding-top 40px
	padding-bottom 80px
	&-contenedor
		max-width 80%
		margin-left auto
		margin-right auto
		font-family 'Montserrat'
		&-fila1
			margin-top 50px
			margin-bottom 20px
			text-align center
			color white
			&-titulo
				font-size 3rem
				// color white
				text-transform uppercase
			&-separador
				width 40%
				border 2px solid white
			&-separador:after
				content "\2605"
				font-size 3rem
				position relative
				top -28px
				background #18bc9c
				padding 0 10px
		&-fila2
			display flex
			justify-content center
			align-items flex-start
			flex-wrap wrap
			&-parrafo
				min-width 250px
				width 35%
				margin 20px 20px
				color white
				font-family 'Lato'
				font-size 20px
				word-spacing 5px
				line-height 1.5
		&-fila3
			text-align center
			margin-top 20px
			a
				display inline-block
				color white
				font-family 'Lato'
				font-size 1.25rem
				text-decoration none
				border 2px solid white
				padding 1rem 1.75rem
				border-radius 4px
				transition .3s
				span
					margin-right 15px
			a:hover
				background white
				color black
				transition .3s
//**************************************************

// CONTACTO
//**************************************************
.contacto
	padding-bottom 80px
	&-contenedor
		max-width 80%
		margin-right auto
		margin-left auto
		&-fila1
			text-align center
			color #2c3e50
			font-family 'Montserrat'
			&-titulo
				font-size 3rem
				text-transform uppercase
			&-separador
				width 40%
				border 2px solid #2c3e50
			&-separador:after
				content "\2605"
				font-size 3rem
				position relative
				top -28px
				background white
				padding 0 10px
		&-fila2
			// border 1px dotted blue
			&-formulario
				// border 1px dotted red
				width 70%
				margin-left auto
				margin-right auto
				font-family 'Lato'
				margin-top 40px
				&-bloque
					margin-bottom 20px
					input, textarea
						font-size 24px
						color #495057
						display block
						width 100%
						border none
						outline 0
						padding 20px 0						
					hr
						border 1px solid #e9ecef
				#submit
					background #18bc9c
					border none
					padding 20px 15px
					color white
					font-size 20px
					border-radius 4px
					transition .3s
				#submit:hover
					background #128f76
					transition .3s
					cursor pointer
