@import "nib"
@import "normalize.css"
@import "style.css"

body
	// font-size 14px
.nav
	background #2c3e50
	font-family 'Montserrat'
	// height 105px;
	padding 40px 0
	.container
		max-width 80%
		margin-right auto
		margin-left auto
		display flex
		justify-content space-between
		align-items center
		// font-size 12px
	&-logo
		font-size 20px
		&-titulo
			margin 0
			color white
			// font-size 1rem
	&-menu
		&-contenedor
			padding 0
			margin 0
			&-listas
				list-style none
				display inline-block
				margin 0 20px
				&-enlaces
					text-decoration none
					color #ffffff
					text-transform uppercase
					font-weight 600
				&-enlaces:hover
					color #18bc9c
	&-menuIcono
		color white
		display none
		font-size 1.5rem
		z-index 1
		cursor pointer
		
		span
			font-size 20px
