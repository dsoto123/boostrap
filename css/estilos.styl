//footer
//+++++++++++++++++++++++++++++++++++++++++++++++++++++++++
.footer
	background #2c3e50
	padding-top 40px
	padding-bottom 80px
	&-contenedor
		max-width 80%
		margin-left auto
		margin-right auto
		font-family 'Montserrat'
		display flex
		justify-content space-around
		flex-wrap wrap
		&-bloque
			width 30%
			min-width 250px
			text-align center
			color white
			// border 1px solid red
			h3
				font-size 24px
			p
				font-family 'Lato'
				font-size 20px
				a
					text-decoration none
					color #18bc9c
				a:hover
					text-decoration underline
			&-listbox
				padding 0
				display flex
				justify-content center
				flex-wrap wrap
				li
					display inline-flex
					list-style none
					// justify-content center
					margin 0 5px
					a
						color white
						text-decoration none
						padding 10px
						border 2px solid white
						border-radius 50%
						font-size 20px
						font-family 'Lato'
						transition .5s
					a:hover
						background white
						color black
						transition .5s
					.icon-facebook-f
						padding 10px 14px

@media screen and (max-width: 768px )
	.nav
		position relative
		&-menuIcono
			display inline-block
		&-menu.active
			left 0
		&-menu
			position absolute
			top 0
			background rgba(0,0,0,.5)
			left -100%
			width 100%
			height 100vh
			display flex
			justify-content center
			align-items center
			text-align center
			&-contenedor
				&-listas
					display block
					margin 20px 0
					border-bottom 2px solid white
					padding-bottom 10px
					&-enlaces
						font-size 30px
						// padding-bottom 10px
						// border-bottom 2px solid white
			
	.header		
		margin-top 0

@media screen and (max-width: 420)
	.header
		&-contenedor
			&-titulo
				font-size 3.8rem
	.portafolio
		&-contenedor
			&-fila1
				&-titulo
					font-size 2.2rem

	.about
		&-contenedor
			&-fila1
				&-titulo
					font-size 2.2rem
	.contacto
		&-contenedor
			&-fila1
				&-titulo
					font-size 2.2rem														
							